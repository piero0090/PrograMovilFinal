<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivEstacionamiento"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tvEstacionamientoLado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="R"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivEstacionamiento"
        />
    <TextView
        android:id="@+id/tvEstacionamientoNivel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1"
        app:layout_constraintTop_toBottomOf="@+id/tvEstacionamientoLado"
        app:layout_constraintStart_toEndOf="@+id/ivEstacionamiento"
        />

</androidx.constraintlayout.widget.ConstraintLayout>